@model EntityLayer.Concrete.Skill
@{
    ViewBag.Title = "AddSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Yetenek Ekleme Sayfasi</h1>
<br />

@using (Html.BeginForm("AddSkill", "Skill", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Yetenek Adi")
        @Html.TextBoxFor(x => x.SkillName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.SkillName, null, new { @class = "text-danger" })

        <br /><br />
        @Html.Label("Yuzde Kac Oraninda Biliyorsunuz")
        @Html.TextBoxFor(x => x.SkillValue, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.SkillValue, null, new { @class = "text-danger" })
        <br /><br />
        <button class="btn btn-info">Kaydet</button>
    </div>
}
